<p>
  <%= link_to 'View Locations', locations_path %>
</p>
<p>
  <%= link_to 'Events', events_path %>
</p>

<h1>Events</h1>
<%= link_to "New Event", new_event_path %>
<% @events.each do |event| %>

<%= render 'events/event', event: event %>
<hr>
<% end %>

<h1>Locations</h1>
<p>
  <%= link_to 'New Location', new_location_path %>
</p>
<% @locations.each do |current_location| %>
  <%= render 'locations/single_location', location: current_location, h3_name: true %>
<% end %>
